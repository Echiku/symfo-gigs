
    {% extends 'base.html.twig' %}

   {% block body %}


                <div
                    class="bg-gray-50 border border-gray-200 p-10 rounded max-w-lg mx-auto mt-24"
                >
                    <header class="text-center">
                        <h2 class="text-2xl font-bold uppercase mb-1">
                            Create a Gig
                        </h2>
                        <p class="mb-4">Post a gig to find a developer</p>
                    </header>

                    <form method="POST"   action="/listings" enctype="multipart/form-data">
                     <input type="hidden" name="token" value="{{ csrf_token('myform') }}">

                        <div class="mb-6">
                            <label
                                for="company"
                                class="inline-block text-lg mb-2"
                                >Company Name</label
                            >
                            {% if company is defined  %}
                             <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="company" value="{{company}}"
                            />
                                    {# here to display error#}
                                    {% if company is empty %}
                                        <p class='text-red-500'>This field can't be empty!</p>
                                    {% endif %} 

                             {% else %}

                              <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="company"
                            />
                             
                            {% endif %}
                           
                        </div>

                        <div class="mb-6">
                            <label for="title" class="inline-block text-lg mb-2"
                                >Job Title</label
                            >

                            {% if title is defined %}
                             <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="title"
                                placeholder="Example: Senior Symfony Developer" value="{{title}}"
                            />
                              
                                   {# here to display error#}
                                    {% if title is empty %}
                                        <p class='text-red-500'>This field can't be empty!</p>
                                    {% endif %} 

                                    {% else %}

                                     <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="title"
                                placeholder="Example: Senior Symfony Developer"
                            />
                              
                                
                            {% endif %}
                           
                               
                        </div>

                        <div class="mb-6">
                            <label
                                for="location"
                                class="inline-block text-lg mb-2"
                                >Job Location</label
                            >
                            {% if location is defined %}
                                 <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="location"
                                placeholder="Example: Remote, Boston MA, etc" value="{{location}}"
                            />
                               
                                   {# here to display error#}
                                    {% if location is empty %}
                                        <p class='text-red-500'>This field can't be empty!</p>
                                    {% endif %} 

                               {% else %}

                                <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="location"
                                placeholder="Example: Remote, Boston MA, etc"
                            />
                        
                            {% endif %}
                           
                               
                        </div>

                        <div class="mb-6">
                            <label for="email" class="inline-block text-lg mb-2"
                                >Contact Email</label
                            >
                            {% if email is defined %}
                                 <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="email" value="{{email}}"
                            />
                                    {# here to display error#}
                                    {% if email is empty %}
                                        <p class='text-red-500'>This field can't be empty!</p>
                                    {% endif %} 

                                    {% elseif email_error is defined %}
                                        <input
                                    type="text"
                                    class="border border-gray-200 rounded p-2 w-full"
                                    name="email"
                                    />
                                     <p class='text-red-500'>{{email_error}}</p>
                                     

                            {% else %}

                               <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="email" 
                            />

                            {% endif %}
                             
                        </div>

                        <div class="mb-6">
                            <label
                                for="website"
                                class="inline-block text-lg mb-2"
                            >
                                Website/Application URL
                            </label>

                            {% if website is defined%}

                             <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="website" value="{{website}}"              
                            />

                            {# here to display error#}
                                    {% if website is empty %}
                                        <p class='text-red-500'>This field can't be empty!</p>
                                    {% endif %} 
                            {% else %}

                             <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="website"              
                            />

                            {% endif %}
                           
                        </div>

                        <div class="mb-6">
                            <label for="tags" class="inline-block text-lg mb-2">
                                Tags (Comma Separated)
                            </label>
                            {% if tags is defined %}

                            <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="tags"
                                placeholder="Example: Symfony, Backend, Postgres, etc" value="{{tags}}"
                            />
                            {# here to display error#}
                                    {% if tags is empty %}
                                        <p class='text-red-500'>This field can't be empty!</p>
                                    {% endif %} 
                            
                            {% else %}            
                            <input
                                type="text"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="tags"
                                placeholder="Example: Symfony, Backend, Postgres, etc"
                            />
                                
                            {% endif %}
                              
                        </div>

                        <div class="mb-6">
                            <label for="logo" class="inline-block text-lg mb-2">
                                Company Logo
                            </label>
                            
                            <input
                                type="file"
                                class="border border-gray-200 rounded p-2 w-full"
                                name="logo"
                            />
                        </div>

                        <div class="mb-6">
                            <label
                                for="description"
                                class="inline-block text-lg mb-2"
                            >
                                Job Description
                            </label>
                               {% if description is defined %}
                                <textarea
                                    class="border border-gray-200 rounded p-2 w-full"
                                    name="description"
                                    rows="10"
                                    placeholder="Include tasks, requirements, salary, etc"
                                >{{description}}</textarea>

                                      {# here to display error#}
                                    {% if tags is empty %}
                                        <p class='text-red-500'>This field can't be empty!</p>
                                    {% endif %} 

                                    {% else %}

                                     <textarea
                                        class="border border-gray-200 rounded p-2 w-full"
                                        name="description"
                                        rows="10"
                                        placeholder="Include tasks, requirements, salary, etc"
                                      ></textarea>
                               {% endif %}
                                

  
                        </div>

                        <div class="mb-6">
                            <button
                                class="bg-sky-500 text-white rounded py-2 px-4 hover:bg-black"
                            >
                                Create Gig
                            </button>

                            <a href="/" class="text-black ml-4"> Back </a>
                        </div>
                    </form>
                </div>

            

       
       {% endblock %}